# FitGenie Backend Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
# Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://your_username:your_password@fitgenie-cluster.xxxxx.mongodb.net/fitgenie?retryWrites=true&w=majority

# Alternative: Local MongoDB (if you prefer local installation)
# MONGODB_URI=mongodb://localhost:27017/fitgenie

# JWT Configuration
JWT_SECRET=fitgenie_super_secret_jwt_key_for_idealize_2025_competition
JWT_EXPIRE=7d

# Google Gemini AI Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Email Configuration (Gmail recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=100
WINDOW_SIZE_MINUTES=15

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
